<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Capa"
    >

    <TextView
        android:id="@+id/capa_titulo_l1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="PONTIFÍCIA UNIVERSIDADE CATÓLICA DE GOIÁS"
        />

    <TextView
        android:id="@+id/capa_titulo_l2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/capa_titulo_l1"
        android:textAlignment="center"
        android:text="CURSO SUPERIOR DE TECNOLOGIA EM ANÁLISE E DESENVOLVIMENTO DE SISTEMA"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/capa_titulo_l3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@id/capa_titulo_l2"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="DESENVOLVIMENTO DE APLICATIVOS PARA DISPOSITIVOS MÓVEIS"
        />

    <TextView
        android:id="@+id/capa_autor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/capa_titulo_l3"
        android:layout_marginTop="130dp"
        android:textSize="12sp"
        android:text="LUAN FERNANDES BARCELOS"
        />

    <Button
        android:id="@+id/btn_capa_atividade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/capa_autor"
        android:layout_marginTop="80dp"
        android:textStyle="bold"
        android:text="PRIMEIRA AVALIAÇAO"
        />

    <TextView
        android:id="@+id/capa_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/capa_data"
        android:textSize="14sp"
        android:text="Goiânia - GO"
        />

    <TextView
        android:id="@+id/capa_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:layout_alignParentBottom="true"
        android:textSize="14sp"
        android:text="2021"
        />

</RelativeLayout>