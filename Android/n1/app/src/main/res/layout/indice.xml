<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/indice_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textSize="42sp"
        android:text="Indice"
        />

    <Button
        android:id="@+id/btn_indice_gerador_aleatorio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="0dp"
        android:textAlignment="textStart"
        android:textStyle="bold"
        android:text="1. Gerador de Valores"
        />

    <Button
        android:id="@+id/btn_indice_jankenpon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="0dp"
        android:textAlignment="textStart"
        android:textStyle="bold"
        android:text="2. JANKENPON"
        />

    <Button
        android:id="@+id/btn_indice_invertexto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="0dp"
        android:textAlignment="textStart"
        android:textStyle="bold"
        android:text="3. INVERSOR DE TEXTO"
        />

    <Button
        android:id="@+id/btn_indice_registra_evento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="0dp"
        android:textAlignment="textStart"
        android:textStyle="bold"
        android:text="4. REGISTRADOR DE EVENTOS"
        />

</LinearLayout>